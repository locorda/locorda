<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #e2e8f0;
  }

  .header-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .logo {
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: opacity 0.2s;
  }

  .logo-icon {
    width: 24px;
    height: 24px;
    display: block;
    flex-shrink: 0;
  }

  .logo-text {
    font-weight: 700;
    font-size: 1.5rem;
    background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .main-nav {
    display: flex;
    gap: 2rem;
    flex: 1;
    justify-content: center;
  }

  /* Dropdown Navigation */
  .nav-dropdown {
    position: relative;
  }

  .nav-dropdown .nav-link {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .dropdown-icon {
    transition: transform 0.2s;
    opacity: 0.6;
  }

  .nav-dropdown:hover .dropdown-icon {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    position: absolute;
    top: calc(100% + 1rem);
    left: 50%;
    transform: translateX(-50%);
    background: white;
    border-radius: 0.75rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border: 1px solid #e2e8f0;
    min-width: 280px;
    padding: 0.5rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease;
    z-index: 1000;
  }

  .nav-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    top: calc(100% + 0.5rem);
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s;
  }

  .dropdown-item:hover {
    background: #f8fafc;
  }

  .dropdown-emoji {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .dropdown-title {
    font-weight: 600;
    color: #1e293b;
    font-size: 0.95rem;
  }

  .dropdown-desc {
    font-size: 0.8rem;
    color: #64748b;
    margin-top: 0.125rem;
  }

  .dropdown-separator {
    height: 1px;
    background: #e2e8f0;
    margin: 0.5rem 0;
  }

  .dropdown-sub {
    padding-left: 2.5rem;
  }

  .dropdown-sub .dropdown-emoji {
    font-size: 1.25rem;
  }

  .nav-link {
    text-decoration: none;
    color: #64748b;
    font-weight: 500;
    transition: color 0.2s;
    position: relative;
  }

  .nav-link:hover {
    color: #2563eb;
  }

  .nav-link.active {
    color: #2563eb;
  }

  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    right: 0;
    height: 2px;
    background: #2563eb;
  }

  .header-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .github-link {
    display: flex;
    align-items: center;
    color: #64748b;
    transition: color 0.2s;
  }

  .github-link:hover {
    color: #2563eb;
  }

  @media (max-width: 768px) {
    .header-content {
      padding: 1rem;
    }

    .main-nav {
      display: none; /* Mobile menu TODO */
    }
  }
</style>
