    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #ec4899 0%, #f59e0b 100%);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.25rem;
    box-shadow: 0 4px 12px rgba(236, 72, 153, 0.3);
  }

  .workflow-step h3 {
    color: #1e293b;
    margin-bottom: 0.5rem;
    margin-top: 0.5rem;
    font-size: 1.25rem;
  }

  .workflow-step p {
    color: #64748b;
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .workflow-step pre {
    background: #1e293b;
    color: #e2e8f0;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    font-size: 0.85rem;
    line-height: 1.5;
  }

  .workflow-step pre code {
    background: none;
    color: inherit;
    padding: 0;
  }

  .generated-code-section {
    background: #f8fafc;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    background: white;
    padding: 2rem;
    border-radius: 0.75rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: transform 0.2s;
  }

  .feature-card:hover {
    transform: translateY(-4px);
  }

