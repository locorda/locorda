---
import BaseLayout from "../layouts/BaseLayout.astro";
import SimpleHero from "../components/SimpleHero.astro";
import CodeBlock from "../components/CodeBlock.astro";

const primaryCta = {
  text: "View on GitHub",
  href: "https://github.com/locorda/sync-engine",
  external: true,
};

const secondaryCta = {
  text: "Read Specification",
  href: "https://github.com/locorda/sync-engine/blob/main/spec/docs/ARCHITECTURE.md",
  external: true,
};
---

<BaseLayout
  title="Sync Engine - Locorda"
  description="Offline-first synchronization for Flutter apps. Connect user storage (Google Drive, Solid Pods) with simple clicks. No database required."
  activeNav="sync"
