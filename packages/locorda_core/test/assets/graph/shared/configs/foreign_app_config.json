{
  "resources": [
    {
      "typeIri": "https://schema.org/Recipe",
      "documentIriTemplate": "https://example.org/recipes/{id}",
      "crdtMapping": "https://example.org/test/mappings/recipe-v1",
      "indices": [
        {
          "type": "FullIndex",
          "localName": "recipes-full",
          "itemFetchPolicy": "prefetch"
        },
        {
          "type": "GroupIndex",
          "localName": "recipes-by-month",
          "itemFetchPolicy": "prefetch",
          "groupingProperties": [
            {
              "predicate": "https://schema.org/dateCreated",
              "hierarchyLevel": 1,
              "transform": {
                "type": "regex",
                "pattern": "^([0-9]{4})-([0-9]{2})-([0-9]{2})$",
                "replacement": "${1}-${2}"
              }
            }
          ]
        }
      ]
    }
  ]
}
