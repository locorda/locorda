---
interface BreadcrumbItem {
	label: string;
	href?: string;
}

interface Props {
	items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
	<ol itemscope itemtype="https://schema.org/BreadcrumbList">
		{items.map((item, index) => (
			<li 
				itemprop="itemListElement" 
				itemscope 
				itemtype="https://schema.org/ListItem"
			>
				{item.href ? (
					<>
						<a href={item.href} itemprop="item">
							<span itemprop="name">{item.label}</span>
						</a>
						<meta itemprop="position" content={String(index + 1)} />
						{index < items.length - 1 && <span class="separator" aria-hidden="true">â€º</span>}
					</>
				) : (
					<>
						<span itemprop="name" class="current">{item.label}</span>
						<meta itemprop="position" content={String(index + 1)} />
					</>
				)}
			</li>
		))}
	</ol>
</nav>

<style>
	.breadcrumbs {
		padding: 1rem 0;
		background: #f8fafc;
		border-bottom: 1px solid #e2e8f0;
	}
	
	.breadcrumbs ol {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		gap: 0.5rem;
		list-style: none;
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
	}
	
	.breadcrumbs li {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.875rem;
	}
	
	.breadcrumbs a {
		color: #64748b;
		text-decoration: none;
		transition: color 0.2s;
	}
	
	.breadcrumbs a:hover {
		color: #2563eb;
		text-decoration: underline;
	}
	
	.breadcrumbs .current {
		color: #1e293b;
		font-weight: 500;
	}
	
	.separator {
		color: #cbd5e1;
		font-weight: 300;
		user-select: none;
	}
	
	@media (max-width: 768px) {
		.breadcrumbs ol {
			padding: 0 1rem;
		}
		
		.breadcrumbs li {
			font-size: 0.8125rem;
		}
	}
</style>
