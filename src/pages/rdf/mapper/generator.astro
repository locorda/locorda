    line-height: 1.6;
  }

  .workflow-content code {
    white-space: nowrap;
  }

  .cta-section {
    background: linear-gradient(135deg, #ec4899 0%, #f59e0b 100%);
    color: white;
    text-align: center;
  }

  .cta-section h2 {
    color: white;
  }

  .cta-description {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
</style>
